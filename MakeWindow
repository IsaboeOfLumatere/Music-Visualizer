
package chessBoardThing;

import javafx.application.Application;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.canvas.Canvas;
import javafx.scene.canvas.GraphicsContext;
import javafx.scene.paint.Color;
import javafx.scene.shape.ArcType;
import javafx.stage.Stage;

public class checkered extends Application {
 
    public static void main(String[] args) {
        launch(args);
    }
 
    @Override
    public void start(Stage primaryStage) {
        primaryStage.setTitle("checkered");
        Group root = new Group();
        Canvas canvas = new Canvas(400, 400);
        GraphicsContext gc = canvas.getGraphicsContext2D();
        drawShapes(gc,200);
        root.getChildren().add(canvas);
        final Scene scene = new Scene(root, 400, 400, Color.BLACK);
        primaryStage.setScene(scene);
        primaryStage.show();
    }
    
    private void drawShapes(GraphicsContext gc, int radius) {
        gc.setStroke(Color.WHITE);
        gc.strokeOval(100,100 , radius, radius);
    }

    private void contract(int seconds){
    	for(int i = 0; i<seconds; i++){
    		set((seconds-i)*100/seconds);
    	}
    }
    
   private void set(int radius){
      Canvas canvas = new Canvas(400, 400);
       GraphicsContext gc = canvas.getGraphicsContext2D();
       drawShapes(gc,200);
       root.getChildren().add(canvas);
       final Scene scene = new Scene(root, 400, 400, Color.BLACK);
       primaryStage.setScene(scene);
       primaryStage.show();
   }
}

